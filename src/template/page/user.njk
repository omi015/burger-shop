{% extends "index.njk" %}
{% block body %}
    <section>
        <div class="py-10 px-5 flex flex-col gap-10 mx-autocontainer">
            <h1 class="font-bold uppercase text-4xl text-center">{{name}}</h1>
            <div class="w-full max-w-xl mx-auto">
                <form action="/user/{{id}}" method="post" class="flex flex-col gap-4 items-start">
                    <fieldset class="w-full border border-stone-300 px-2 rounded-md flex flex-col">
                        <legend class="text-sm font-medium px-2">Nombre</legend>
                        <input type="text" name="name" value="{{name}}" class=" bg-transparent px-4 py-2 -mt-2 -mx-2">
                    </fieldset>
                    <div class="flex justify-between w-full">
                        <a href="/login" class="inline-block bg-amber-500 text-white rounded-full py-1 font-bold px-6">Volver</a>
                        <button type="submit" class="bg-blue-500 text-white rounded-full py-1 font-bold px-6">
                            Actualizar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </section>

{% endblock %}